<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="person" class="com.rays.test.Person">
		<property name="name" value="Ram" /> <!-- setName() -->
		<property name="address" value="Indore" /> <!-- setAddress() -->
	</bean>

	<bean id="person1" class="com.rays.test.Person">
		<constructor-arg value="Shyam" />
		<constructor-arg value="Bhopal" />
	</bean>

</beans>

<!-- XML ek text-based file format hota hai jo data ko store aur transfer 
	karne ke liye use hota hai. Iska main kaam hota hai data ko readable aur 
	structured form me rakhna. -->